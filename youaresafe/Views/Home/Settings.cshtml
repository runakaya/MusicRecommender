@{
    ViewData["Title"] = "Ayarlar";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <title>@ViewData["Title"] - You Are Safe</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <style>
        .body {
            
            background-color: #212529;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Anasayfa", "Home")">youaresafe</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Account")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <form method="post">
        <div class="form-group">
            <label for="theme">Tema</label>
            <select id="theme" class="form-control">
                <option value="light">Açık</option>
                <option value="dark">Koyu</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>



</body>
<footer class="bg-dark py-5">
    <div class="container px-4 px-lg-5">
        <div class="small text-center text-muted">Copyright &copy; 2024 - You Are Safe.</div>
    </div>
</footer>


